<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:orientation="horizontal"
        android:id="@+id/ll_order_1"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_order_grade"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="小学一年级"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="语文"
            app:layout_constraintStart_toEndOf="@id/tv_order_grade"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tv_order_subject"
            tools:layout_editor_absoluteX="84dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="番禺区新港东路138号"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/tv_order_subject"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tv_order_address"
            tools:layout_editor_absoluteX="119dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="ID:3232323232"
            android:id="@+id/tv_order_id"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="@id/ll_order_1"
            app:layout_constraintTop_toTopOf="@id/ll_order_1"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_order_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/ll_order_2"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/ll_order_2"
            app:layout_constraintStart_toStartOf="@id/ll_order_2"
            android:text="￥(每小时)："
            android:textColor="#FF9800"
            android:id="@+id/tv_price_label"
            tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="0dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_order_price"
            android:text="120"
            android:textColor="#FF9800"
            app:layout_constraintTop_toTopOf="@id/ll_order_2"
            app:layout_constraintStart_toEndOf="@id/tv_price_label"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_order_state"
            app:layout_constraintTop_toTopOf="@id/ll_order_2"
            android:text="未预约"
            android:textColor="@color/colorPrimary"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="@id/ll_order_2"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:id="@+id/ll_order_3"
        app:layout_constraintTop_toBottomOf="@+id/ll_order_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_timesOfVisited"
            app:layout_constraintStart_toStartOf="@id/ll_order_3"
            app:layout_constraintTop_toTopOf="@id/ll_order_3"
            app:layout_constraintEnd_toStartOf="@+id/tv_order_visit_times"
            android:text="浏览次数: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_order_visit_times"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/tv_timesOfVisited"
            app:layout_constraintTop_toTopOf="@id/ll_order_3"
            android:text="12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/ll_order_3"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/ll_order_3"
            android:text="点击查看"/>
    </android.support.constraint.ConstraintLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:background="@color/base_color_text_gray"
        app:layout_constraintTop_toBottomOf="@id/ll_order_3" />
</android.support.constraint.ConstraintLayout>