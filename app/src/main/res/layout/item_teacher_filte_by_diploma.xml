<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_teacher_info"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/tv_teacher_diploma"
        android:layout_width="wrap_content"
        android:text="loading..."
        android:textSize="14sp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/img_teacher_info"
        app:layout_constraintTop_toTopOf="@+id/img_teacher_info"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv__teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="loading..."
        android:textSize="14sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/tv_teacher_diploma"
        app:layout_constraintTop_toTopOf="@+id/tv_teacher_diploma"
        tools:layout_editor_absoluteX="132dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_teacher_saying_pre"
        android:text="教学箴言:"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_teacher_diploma"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_teacher_saying"
        app:layout_constraintStart_toStartOf="@id/tv_teacher_diploma"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_teacher_saying"
        android:text="loading..."
        android:textColor="@color/accent_yellow"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_teacher_saying_pre"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="@id/tv_teacher_saying_pre"/>

    <TextView
        android:id="@+id/tv_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看详细"
        android:textSize="12sp"
        android:textColor="#8BC34A"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_teacher_diploma"
        tools:layout_editor_absoluteX="331dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"
        android:id="@+id/tv_teacher_info_base_line"
        android:background="@color/color_divide_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_teacher_info" />

</android.support.constraint.ConstraintLayout>