<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--required at least API 21-->
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#0288D1</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TextLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">#FFCC00</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="style_smile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="style_text" parent="style_smile">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="style_text_small" parent="style_smile">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="style_text_middle" parent="style_smile">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="style_text_large" parent="style_smile">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="style_text_black" parent="style_text">
        <item name="android:textColor">@color/base_color_text_black</item>
    </style>

    <style name="style_text_white" parent="style_text">
        <item name="android:textColor">@color/base_color_text_white</item>
    </style>

    <style name="style_text_gray_small" parent="style_text_small">
        <item name="android:textColor">@color/color_99</item>
    </style>

    <style name="style_text_white_small" parent="style_text_small">
        <item name="android:textColor">@color/base_color_text_white</item>
    </style>
</resources>
